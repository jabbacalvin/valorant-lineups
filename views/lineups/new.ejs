<%- include('../partials/header') %>
  <div class="container-fluid" data-bs-theme="dark">
    <form id="new-form" class="needs-validation" action="/lineups" method="POST" novalidate>
      <div class="row">
        <div class="col-lg-6 col-md-6">
          <div class="row">
