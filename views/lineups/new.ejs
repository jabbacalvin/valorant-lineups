            <button class="btn btn-primary" type="submit">Submit</button>
          </div>
        </div>
        <div class="col-lg-6 col-md-6">
          <div id="canvas-container">
            <img id="minimap-img" hidden />
            <canvas id="minimap-canvas"></canvas>
          </div>
        </div>
      </div>
    </form>
  </div>


